<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <!--最左侧表明出租计划状态的颜色块-->
    <LinearLayout
        android:id="@+id/layout_lease_record_state_color_block"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/my_stop_theme_orange">
    </LinearLayout>

    <!--右侧说明出租计划明细的布局-->
    <LinearLayout
        android:id="@+id/layout_lease_record_detail_content"
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--明细部分的主体，表明车位，和计划出租的时间段-->
        <LinearLayout
            android:id="@+id/layout_stop_info_and_lease_plan"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:paddingLeft="15dp">

            <!--车位基本属性，目前只标识车位名-->
            <LinearLayout
                android:id="@+id/layout_stop_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_stop_name_lease_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!--租用计划时间-->
            <LinearLayout
                android:id="@+id/layout_lease_record_plan_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--时钟小图标-->
                <ImageView
                    android:id="@+id/iv_lease_plan_time_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <!--租用计划时间段-->
                <TextView
                    android:id="@+id/tv_lease_plan_executable_period"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"/>

            </LinearLayout>

        </LinearLayout>

        <!--该车位计划状态的文字说明-->
        <LinearLayout
            android:id="@+id/layout_lease_state_remark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lease_state_remark"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>