<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/write">

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/rl_title_mypropert"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/write" >

        <ImageButton
            android:id="@+id/ib_back_mypropert"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@color/write"
            android:scaleType="fitCenter"
            android:src="@drawable/goback1" />

        <TextView
            android:id="@+id/tv_title_mypropert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/my_property"
            android:textColor="@color/style"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/ib_add_mypropert"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/write"
            android:scaleType="fitCenter"
            android:src="@drawable/create_complain"
            />
    </RelativeLayout>
    
    <!-- 标题图片 -->
    <RelativeLayout
        android:id="@+id/rl_theme_mypropert"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:background="@color/write"
        android:gravity="center"
        android:layout_below="@id/rl_title_mypropert">

        <ImageView
            android:id="@+id/iv_themepic_mypropert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/myproperty_title" 
            android:scaleType="fitCenter"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listview_mypropert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_theme_mypropert"
        android:divider="@color/write"
        android:dividerHeight="15dip"
        android:padding="20dp"
        android:listSelector="@color/bc" >
    </ListView>

</RelativeLayout>