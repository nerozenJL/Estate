<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title_complain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/write" >

        <ImageButton
            android:id="@+id/im_back_complain"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:background="@color/write"
            android:scaleType="fitCenter"
            android:src="@drawable/goback1" />

        <TextView
            android:id="@+id/tv_title_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="@string/complaint"
            android:textColor="@color/style"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/im_submit_complain"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/write"
            android:scaleType="fitCenter"
            android:src="@drawable/submit"

            />
    </RelativeLayout>


    <!-- 标题图片 -->
    <RelativeLayout
        android:id="@+id/rl_complain_theme_complain"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:background="@color/write"
        android:gravity="center"
        android:layout_below="@id/rl_title_complain">

        <ImageView
            android:id="@+id/im_complainzhuce_themepicrl_title_complain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/my_complain_title"
            android:scaleType="fitCenter"/>
    </RelativeLayout>


    <EditText
        android:id="@+id/et_theme_complain"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0.8"
        android:background="@drawable/singline_edittext"
        android:gravity="top"
        android:hint="@string/theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_elaborate_complain"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_edittext"
            android:hint="@string/describe_detail" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_addpicture_complain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_upload_picture_complain"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@color/write"
            android:scaleType="fitCenter"
            android:src="@drawable/add_picture" />

        <TextView
            android:id="@+id/tv_prompt_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/click_to_post_photo" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5" >

        <LinearLayout
            android:id="@+id/ll_picture_complain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>